
// Global Scope
let MyName = "Farnaz";
var MyAge = 49
const MyHeight = 160

console.log(MyName);
console.log(MyAge);
console.log(MyHeight);



// Function Scope
function myFunction() {
    console.log("within function: " + MyName);
    console.log("within function: " + MyAge);
    console.log("within function: " + MyHeight);
}



// Another Block Scope
if (true) {
    console.log("within block: " + MyName);
    console.log("within block: " + MyAge);
    console.log("within block: " + MyHeight);
}

myFunction ()
